{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@ui/*": ["components/ui/*"],
      "@cub-types/*": ["types/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@assets/*": ["assets/*"],
      "@stores/*": ["stores/*"],
      "@utils/*": ["utils/*"]
    },
    "checkJs": false
  },
  "include": [
    "src"
  ]
}
